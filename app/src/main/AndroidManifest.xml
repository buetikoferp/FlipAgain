<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.team.flipagain">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launch"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".client.gui.login.LoginActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".client.gui.mainScreen.MainScreenActivity"
            android:configChanges="orientation"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".client.gui.mainScreen.MainScreenActivity" />
        </activity>
        <activity
            android:name=".client.gui.login.CreateAccountActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.gui.login.ResetPasswordActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.login.LoginActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.gui.mainScreen.cardScreen.CardOverviewActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.mainScreen.MainScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.gui.mainScreen.cardCreator.CardCreatorActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.mainScreen.MainScreenActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" />
        <activity
            android:name=".client.gui.mainScreen.cardCreator.BundleCreatorActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.mainScreen.MainScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.gui.mainScreen.cardGetter.CardGetterActivity"
            android:configChanges="orientation"
            android:parentActivityName=".client.gui.mainScreen.MainScreenActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".client.gui.mainScreen.cardScreen.CardQuestionActivity"
            android:parentActivityName=".client.gui.mainScreen.cardScreen.CardOverviewActivity" />
        />
        <activity
            android:name=".client.gui.mainScreen.cardScreen.CardSolutionActivity"
            android:parentActivityName=".client.gui.mainScreen.cardScreen.CardOverviewActivity" />
        <!--
             ATTENTION: This was auto-generated to add Google Play services to your project for
             App Indexing.  See https://g.co/AppIndexing/AndroidStudio for more information.
        -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity android:name=".client.gui.mainScreen.cardCreator.SelectBundleActivity" />
        <activity android:name=".client.gui.mainScreen.cardScreen.CardFlipperActivity"></activity>
    </application>

</manifest>

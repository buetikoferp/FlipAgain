<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".gui.mainScreen.cardScreen.CardQuestionActivity">

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/cardQuestion_progressBar" />

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/cardQuestion_btn_getSolution"
        android:id="@+id/cardQuestion_btn_getSolution"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:id="@+id/cardQuestion_scrollV_question"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/cardQuestion_btn_getSolution"
        android:layout_below="@+id/cardQuestion_progressBar">

    </ScrollView>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:hint="Hier kommt dann die Frage hin"
        android:id="@+id/cardQuestion_txt_question"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/cardQuestion_scrollV_question"
        android:layout_below="@+id/cardQuestion_progressBar" />

</RelativeLayout>
